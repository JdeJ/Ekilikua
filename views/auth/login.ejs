<div class="jumbotron vertical-center">
  <div class="container">

    <div class="card">
      <div class="card-body">
        <h4 class="card-title text-center">Log in</h4>
        <p class="card-text text-center">
          Connect with the teachers around you or share your knowledges
        </p>
      </div>
    </div>

    <form class="w-100 p-3" class="form-inline" action="/auth" method="post">

      <label class="sr-only" for="email">Email</label>
      <div class="input-group mb-2 mr-sm-2">
        <div class="input-group-prepend">
          <div class="input-group-text atsign">
            <i class="fas fa-user-graduate"></i>
          </div>
        </div>
        <input class="form-control form-control-lg" type="text" name="email" class="form-control" id="email" placeholder="email">
      </div>

      <label class="sr-only" for="password">Password</label>
      <div class="input-group mb-2 mr-sm-2">
          <div class="input-group-prepend">
            <div class="input-group-text atsign">
              <i class="fas fa-key"></i>
            </div>
          </div>
          <input type="password" name="password" class="form-control form-control-lg" id="password"  placeholder="password">
        </div>


      <div class="form-check mb-2 mr-sm-2">
        <input class="form-check-input" type="checkbox" id="inlineFormCheck">
        <label class="form-check-label" for="inlineFormCheck">
          Remember me
        </label>
      </div>

      <button type="submit" class="btn btn-primary mb-2">Connect</button>
    </form>
    <p>Don't have an account yet? Just <a href="/auth/signup">sign up</a></p>
  </div>
</div>